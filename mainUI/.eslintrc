{
	"globals": {
		"$": true, //zepto
		"define": true, //requirejs
		"require": true //requirejs
	},
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"installedESLint": true,
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react","html"
	],
	"rules": {
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": 0,
		"no-console": 0,
		"quotes": [2, "single"],
		"semi": 1
	}
}